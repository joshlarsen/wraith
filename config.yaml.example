# Example configuration for vscan vulnerability classifier

firestore:
  project_id: "your-gcp-project-id"
  collection: "vulnerability_classifications"

llm:
  provider: "openai"  # Options: openai, anthropic, vertex
  model: "gpt-4"
  api_key: "your-api-key-here"
  # endpoint: "https://api.openai.com/v1"  # Optional: custom endpoint
  # options:  # Provider-specific options
  #   project_id: "your-vertex-project"  # For Vertex AI
  #   location: "us-central1"            # For Vertex AI

osv:
  modified_csv_url: "https://osv-vulnerabilities.storage.googleapis.com/modified_id.csv"
  api_url: "https://api.osv.dev/v1"
  ecosystem: "npm"  # Optional: filter by ecosystem (npm, PyPI, Go, etc.)

